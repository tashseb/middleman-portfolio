<div class="row my-3">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <h2 class="text-center-heading">Projects</h2>
        <% data.projects.each do |project| %>
          <section>
            <div class="project-container ">
              <div class="project-image project-img">
                <%= image_tag project.image, alt: "project image", class: "d-block w-100", style: "box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);"%>
              </div>
              <div class="project-information project-info">
                <h5><%= project.name %></h5>
                <h6><%= project.role %></h6>
                <p><%= project.description %></p>
                <p><%= project.role_description %></p>
                <div class="technology-container">
                  <% project.tech_stack.each do |logo| %>
                    <%= image_tag logo, alt: "text", class: "technology-icons" %>
                  <% end %>
                </div>
                <%= link_to "View Code", project.gh, target: "_blank", rel: "nofollow noopener", class:"view-live-btn" %>
              </div>
              <div class="divider d0"></div>
            </div>
          </section>
        <% end %>
      </div>
    </div>
  </div>
</div>
